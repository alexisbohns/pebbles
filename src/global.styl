.selectable
    -webkit-user-select text
    user-select text

:root
    --green-primary #729b79
    --green-light #bacdb0
    --petrol-primary #475b63
    --mauve-primary #8b575c
    --mauve-light #c98986
    --pink-light #fae1dd
    --pine-dark #283618
    --wood-darker #211E1C
    --wood-dark #463f3a
    --wood-primary #8a817c
    --wood-light #d9cbc3
    --linen-light #f5ebe0

    --e00 var(--linen-light)
    --e05 var(--wood-primary)
    --e10 var(--wood-dark)

    --a00 var(--pink-light)
    --a05 var(--mauve-light)
    --a10 var(--mauve-primary)


    --f-def "Sora", system-ui, sans-serif
    --f-serif "Alegreya", "Athelas", serif
    
    box-sizing border-box
    padding 0
    margin 0

:root[data-theme='dark']
    --e00 var(--wood-darker)
    --e10 var(--linen-light)

    --a10 var(--pink-light)
    --a00 var(--mauve-primary)

::selection
    color var(--a10)
    background-color var(--a00)

body
    font-family var(--f-def)
    background var(--e00)
    color var(--e10)
    -webkit-user-select none
    user-select none
    padding 1rem
    margin 0
    max-width 700px

h1, h2, h3, h4, h5, h6, p, a
    margin 0
    padding 0

a, a:visited
    text-decoration none
    color var(--a05)

    &:hover
        opacity .7
